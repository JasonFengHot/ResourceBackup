if(mMenuView.getContext().getPackageName().equalsIgnoreCase("com.android.dialer")){
    mMenuView.setOnKeyListener(new android.view.View.OnKeyListener() {
        @Override
        public boolean onKey(View v, int keyCode, android.view.KeyEvent event) {
            // TODO Auto-generated method stub
            if(keyCode == android.view.KeyEvent.KEYCODE_CALL){      //在通话菜单上屏蔽CALL按键
                return true;
            }
            return false;
        }
    });
}

